# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
PORT=3001
NODE_ENV=development

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=resort_db
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# ========================================
# CONFIGURAÇÕES JWT
# ========================================
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_REFRESH_SECRET=seu_refresh_secret_super_seguro_aqui

# ========================================
# CONFIGURAÇÕES DO FRONTEND
# ========================================
FRONTEND_URL=http://localhost:3000

# ========================================
# APIS EXTERNAS
# ========================================
# Chave da API OpenWeatherMap para dados meteorológicos
# Obtenha em: https://openweathermap.org/api
WEATHER_API_KEY=sua_chave_api_clima_aqui

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100  # máximo 100 requests por IP

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
LOG_LEVEL=info
LOG_FORMAT=combined

# ========================================
# CONFIGURAÇÕES DE UPLOAD (FUTURO)
# ========================================
# MAX_FILE_SIZE=10485760  # 10MB
# UPLOAD_PATH=./uploads
