# Ambiente
NODE_ENV=development

# API
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_API_TIMEOUT=30000

# WebSocket
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_WS_RECONNECT_INTERVAL=5000

# Autenticação
REACT_APP_AUTH_TOKEN_KEY=resort_auth_token
REACT_APP_AUTH_REFRESH_TOKEN_KEY=resort_refresh_token
REACT_APP_AUTH_USER_KEY=resort_user

# Serviço de Clima
REACT_APP_WEATHER_API_KEY=your_weather_api_key
REACT_APP_WEATHER_API_URL=https://api.weatherapi.com/v1

# Cache e Storage
REACT_APP_CACHE_TTL=3600
REACT_APP_STORAGE_PREFIX=resort_

# Configurações de UI
REACT_APP_DEFAULT_THEME=light
REACT_APP_DEFAULT_LANGUAGE=pt-BR
REACT_APP_DATE_FORMAT=DD/MM/YYYY
REACT_APP_CURRENCY=BRL

# Recursos
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Logs e Monitoramento
REACT_APP_ENABLE_ERROR_REPORTING=false
REACT_APP_SENTRY_DSN=your_sentry_dsn

# Paginação
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_REVIEWS=true

# Timeouts e Limites
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_IDLE_TIMEOUT=900000
REACT_APP_API_RATE_LIMIT=100
